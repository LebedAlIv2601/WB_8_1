<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/hero_icon_image_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/dota_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hero_name_text_view"
        style="@style/header_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Axe"
        app:layout_constraintStart_toEndOf="@+id/hero_icon_image_view"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/hero_primary_attr_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/strength_attribute_symbol"
        app:layout_constraintBottom_toBottomOf="@+id/hero_name_text_view"
        app:layout_constraintStart_toEndOf="@+id/hero_name_text_view"
        app:layout_constraintTop_toTopOf="@+id/hero_name_text_view" />

    <TextView
        android:id="@+id/hero_attack_type_label_text_view"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/attack_type_label"
        app:layout_constraintStart_toStartOf="@+id/hero_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/hero_name_text_view" />

    <TextView
        android:id="@+id/hero_attack_type_text_view"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Ranged"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/hero_attack_type_label_text_view"
        app:layout_constraintStart_toEndOf="@+id/hero_attack_type_label_text_view"
        app:layout_constraintTop_toTopOf="@+id/hero_attack_type_label_text_view" />


</androidx.constraintlayout.widget.ConstraintLayout>